<div class="text-center bg-dark text-white py-5" style="background: url('https://img.freepik.com/premium-photo/tasty-popcorn-movie-reel-clapboard-wooden_392895-8662.jpg?w=1380') no-repeat center center; background-size: cover; width: 100%; height: 400px; display: flex; justify-content: center; align-items: center;">
    <div class="text-center">
      <h1 class="display-4">Save any kind of movies</h1>
      <h2 class="mt-3">Classic</h2>
    </div>
</div>

<div class="container">
    <h2 class="text-center mb-4">My Lists</h2>

    <div class="d-flex justify-content-between mb-4">
      <div></div>
      <div>
        <%= link_to "Create a new list", new_list_path, class: 'btn btn-success btn-lg' %>
      </div>
    </div>
</div>

<div class="container my-5">
    <div class="row">
      <% @lists.each do |list| %>
        <div class="col-lg-4 mb-4">
          <div class="card text-white">
            <div class="d-flex justify-content-center align-items-center" style="background: url('<%= cl_image_path list.image.key %>') center center; background-size: cover; height: 250px;">
              <%= link_to list.name, list_path(list), class: "card-title bg-dark bg-opacity-50 text-center text-decoration-none fw-bold fs-2 py-2 w-100" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
